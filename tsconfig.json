{
   "compilerOptions": {
      "module": "commonjs",
      "target": "ES2015",
      "outDir": "./dist",
      "strict": true,
      "removeComments": true,
      "sourceMap": false,
      "declaration": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
   },
   "exclude": [
      "node_modules",
      "dist"
   ],
   "include": [
      "src/**/*.ts",
   ]
}